{% extends 'base.html.twig' %}
{% block title %}All programs{% endblock %}
{% block body %}

    <h1>All table's program Series : </h1>

    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / <a href="{{ path('program_show', {id: program.id}) }}">{{ program.title }} <a> - Category: {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        No series available.
    {% endfor %}

    <a href="{{ path('app_index') }}">Back to Home</a>


{% endblock %}

